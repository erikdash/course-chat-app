<div class="welcome-wrapper">
  <div class="container-small">

    <div class="welcome-form-wrapper">
      <h2>Create Account</h2>

      <%= form_for @user do |form| %>
        <%= form.text_field :email, type: 'email', placeholder: "Email", class: 'input-field'%>

        <%= form.password_field :password, placeholder: "Password", class: 'input-field' %>
        
        <%= form.submit 'Submit', :class => 'submit-button' %>

        <div class="other-links">
          <%= link_to t(".sign_in"), sign_in_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>