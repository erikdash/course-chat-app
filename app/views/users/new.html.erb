<div class="authentication-wrapper">
  <div class="container-small">

    <div class="authentication-form-wrapper">
      <h2>Create Account</h2>

      <%= form_for @user do |form| %>
        <%= form.text_field :email, type: 'email', placeholder: "Email", minlength: 4, maxlength: 30, required: true, class: 'input-field'%>

        <%= form.text_field :nickname, placeholder: "Nickname", minlength: 4, maxlength: 12, required: true, class: 'input-field' %>

        <%= form.password_field :password, placeholder: "Password", minlength: 6, maxlength: 14, required: true, class: 'input-field' %>

        <%= form.submit 'Submit', :class => 'submit-button' %>

        <div id="flash">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>
        </div>

        <div class="other-links">
          <%= link_to t(".return"), sign_in_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>