<div class="chatroom-wrapper">
  <div class="chatroom-header">
    <h1 id="header"><%= @chatroom.chat_room_name %></h1>
  </div>

  <div id="messages">
    <% if @chatroom.messages %>
      <%= render @chatroom.messages %>
    <% end %>
  </div>

  <div class="form-wrapper">
    <%= form_with url: @chatroom, html: {id: 'new-message'} do |form| %>
      <%= form.text_area :contents, type: 'contents', placeholder: "Message", class: 'text-field', id: 'contents' %>
      <%= form.submit 'Send', :class => 'submit-message' %>
      <div class="form-group">
        <%= form.file_field :attachment, id: 'message-attachment' %>
        <%# <br> %>
        <!--<small>File extensions: .txt, .pdf, .docx, .xlx, .java, .c, .cs, .js, .py, .rb, .html, .css, .cpp, .pptx</small>-->
      </div>
    <% end %>
  </div>
</div>
