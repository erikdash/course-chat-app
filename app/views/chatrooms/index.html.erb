<div class="home-wrapper">
  <div class="container">
    
    <!-- Left Radio -->
    <div class="side">
      <ul>
        <li>
          <%= button_to 'Home', home_path, method: :get, class: 'side-button selected' %>
        </li>
        <li>
          <%= button_to 'Starred', home_path, method: :get, class: 'side-button' %>
        </li>
        <li>
          <%= button_to 'Profile', home_path, method: :get, class: 'side-button' %>
        </li>
        <li>
          <%= button_to 'Current Room', home_path, method: :get, class: 'side-button' %>
        </li>
      </ul>
      <hr>
      <button id="add-room" class="submit-button">Add room</button>
      <%= button_to 'Sign out', sign_out_path, method: :delete, class: 'submit-button' %>
    </div>

    <!-- Modals -->
    <div id="add-room-modal" class="modal">
      <div class="modal-content">
        <span id="close-modal">&times;</span>
        <p>Some text in the Modal..</p>
      </div>
    </div>

    <!-- Home Panel -->
    <div class="main">
      <div class="home-header">
        <h1>Hi, <%= current_user.nickname %></h1>
        <%= link_to t(".create room"), 'chatrooms/new' %>
      </div>

      <% @rooms.each do |room| %>
        <div class="room-card">
          <%= room.chat_room_name %>
          <p>üìÖ: <%= room.date_created %></p>
          <p>‚≠ê: <%= room.number_of_stars %></p>
          <%= link_to 'Show', chat_room_path_url(room) %>
        </div>
      <% end %>
    </div> 
  </div>
</div>
