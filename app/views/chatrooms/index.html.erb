<div class="home-wrapper">
  <div class="container">
    
    <!-- Left Radio -->
    <div class="side">
      <ul>
        <li>
          <%= button_to 'Home', home_path, method: :get, class: 'side-button selected' %>
        </li>
        <li>
          <%= button_to 'Starred', home_path, method: :get, class: 'side-button' %>
        </li>
        <li>
          <%= button_to 'Profile', profile_path, method: :get, class: 'side-button' %>
        </li>
        <li>
          <%= button_to 'Current Room', session[:current_room], method: :get, class: 'side-button' %>
        </li>
      </ul>
      <hr>
      <button id="add-room" class="submit-button">Add room</button>
      <%= button_to 'Sign out', sign_out_path, method: :delete, class: 'submit-button' %>
    </div>

    <!-- Modals -->
    <div id="add-room-modal" class="modal">
      <div class="modal-content">
        <span id="close-modal">&times;</span>
        <h2>New Chat Room</h2>
        <%= render partial: "new" %>
      </div>
    </div>

    <!-- Home Panel -->
    <div class="main">
      <div class="main-header">
        <h1>Hi, <%= current_user.nickname %></h1>
      </div>

      <div class="rooms">
        <% @rooms.each do |room| %>
          <div class="room-card">
            <h4><%= room.chat_room_name %></h4>
            <p>üìÖ: <%= room.date_created %></p>
            <p>‚≠ê: <%= room.number_of_stars %></p>
            <%= link_to content_tag(:span, ""), chat_room_path_url(room) %>
          </div>
        <% end %>
      </div>
    </div> 
  </div>
</div>
